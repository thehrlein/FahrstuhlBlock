<?xml version="1.0" encoding="utf-8"?>
<layout>
    
    <data>
        
        <variable
            name="viewModel"
            type="com.tobiapplications.fahrstuhlblock.presentation.settings.GameRulesViewModel" />

        <import type="com.tobiapplications.fahrstuhlblock.entities.models.settings.MaxCardCountSelection" />
        <import type="com.tobiapplications.fahrstuhlblock.ui_common.utils.MaxRoundHelper" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:checkedButton="@id/options_one_deck"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/options_one_deck"
                android:text="@{String.format(@string/game_rules_cards_options_one_deck, MaxRoundHelper.getHighCardCount(@integer/one_card_deck, viewModel.playerCount), viewModel.playerCount)}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/options_two_decks"
                android:layout_width="match_parent"
                android:text="@{String.format(@string/game_rules_cards_options_two_decks, MaxRoundHelper.getHighCardCount(@integer/two_card_decks, viewModel.playerCount), viewModel.playerCount)}"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/options_individual"
                android:layout_width="match_parent"
                android:text="@string/game_rules_cards_options_individual"
                android:layout_height="wrap_content" />

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/options_individual_input_layout"
            style="?textInputStyleOutlined"
            android:visibility="@{viewModel.maxCardCountSelection == MaxCardCountSelection.INDIVIDUAL}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_2"
            android:hint="@string/game_rules_cards_options_individual_input_hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radio_group">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/options_individual_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:text="@={viewModel.individualCardCountValue}"/>

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
